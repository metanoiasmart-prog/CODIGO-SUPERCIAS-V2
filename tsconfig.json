{
  "compilerOptions": {
    "target": "ES2021",
    "lib": ["dom", "ES2021"],
    "module": "esnext",
    "moduleResolution": "bundler",
    "strict": false,
    "jsx": "preserve",
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}